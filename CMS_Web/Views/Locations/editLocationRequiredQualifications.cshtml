@{
    ViewBag.Title = "Location Required Qualifications";
}

<p class="dataHeader">Qualifications required to work at Location : <b>@(ViewData["locationName"])</b></p>

@(Html.Kendo().Notification()
    .Name("popupNotification")
)

@using (Html.BeginForm())
{

    <div id="vertical">
        <div id="top-pane">
            <div id="horizontal" style="height: 100%; width: 100%;">
                <div id="left-pane">
                    <div class="messagesUserList">
                        <b>Click on Qualification to Add</b>
                        @(Html.Kendo().ListView<CMS_Web.Models.Qualification>()
                            .Name("qualificationsList")
                            .TagName("div")
                            .Navigatable()
                            .Pageable()
                            .ClientTemplateId("template")
                            .Selectable(select => select.Mode(ListViewSelectionMode.Single))
                            .DataSource(dataSource => dataSource
                                .Read(read => read.Action("GetSelectableQualificationsForLocation", "Locations").Data("locationID")
                                )
                            )
                            .Events(e => e
                                .Change("onQualificationsSelect")
                            )

                        )

                    </div>
                </div>
                <div id="right-pane">
                    @(Html.Kendo().Grid<CMS_Web.Models.LocationRequiredQualification>()
                        .Name("qualificationsGrid")
                        .Columns(columns =>
                        {
                            columns.Bound(p => p.QualificationID).Hidden();
                            columns.ForeignKey(p => p.QualificationID, (System.Collections.IEnumerable)ViewData["Qualifications"], "ID", "Name").Title("Qualification").Width("80%");
                            columns.Command(command => command.Custom("Remove").Click("removeQualification")).Width("20%");
                        })
                        .Pageable()
                        .Sortable()
                        .Scrollable()
                        .Filterable()
                        .HtmlAttributes(new { style = "height:100%" })
                        .Resizable(resize => resize.Columns(true))
                        .DataSource(dataSource => dataSource.Ajax()
                            .Model(model => model.Id(p => p.ID))
                            .Read(read => read.Action("GetLocationQualificationList", "Locations").Data("locationID"))
                            )
                    )

                </div>
            </div>
        </div>
        <div id="bottom-pane">
            <div class="pane-content">
                <span class="k-button" style="float:right">
                    @Html.ActionLink("Return to " + ViewData["returnPage"], (string)ViewData["returnPage"], "Locations")
                </span>
            </div>
        </div>
    </div>


}


<style scoped>
    #vertical {
        height: 600px;
        width: 1000px;
        margin: 0 auto;
    }

    .rootfolder {
        background-position: 0 0;
    }

    .folder {
        background-position: 0 -16px;
    }

    .pdf {
        background-position: 0 -32px;
    }

    .html {
        background-position: 0 -48px;
    }

    .image {
        background-position: 0 -64px;
    }

    #middle-pane {
        background-color: rgba(60, 70, 80, 0.10);
    }

    #bottom-pane {
        background-color: rgba(60, 70, 80, 0.15);
    }

    #left-pane, #center-pane, #right-pane {
        background-color: rgba(60, 70, 80, 0.05);
    }

    .pane-content {
        padding: 10px 10px;
    }
</style>

<script type="text/x-kendo-tmpl" id="template">
    <div class="listViewFormat">
        #= Name#
    </div>
</script>

<!--Reference the SignalR library. -->
<script src="/Scripts/jquery.signalR-2.1.2.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="/signalr/hubs"></script>

<script>

    function locationID()
    {
        var ID = @ViewData["locationID"];
        return { locationID: ID };
    }

    function removeQualification(e)
    {
        e.preventDefault();
        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        var qualID =  dataItem.QualificationID;
        window.location.href = "@Url.Action("removeQualificationFromLocation", "Locations")?locationID=" + locationID().locationID + "&qualificationID=" + qualID;
    }

    function onQualificationsSelect(e) {

        e.preventDefault();
        var qualificationID = selectedQualification().qualificationID;
        var uID = locationID().locationID;
        window.location.href = "@Url.Action("AddQualificationToLocation", "Locations")?locationID=" + uID + "&qualificationID=" + qualificationID;
    }

    function selectedQualification() {

        var list = $("#qualificationsList").data("kendoListView");
        if (list != null) {
            var index = list.select().index();
            if (index != -1) {
                var dataItem = list.dataSource.view()[index];
                var user = dataItem.ID;
                return {
                    qualificationID: user
                };
            }
            else
                return {
                    qualificationID: 0
                };
        }
        else
            return {
                qualificationID: 0
            };
    }

 

  $(document).ready(function () {


        var messageHub = $.connection.messageHub;
        var userName = "@HttpContext.Current.User.Identity.Name";

        $.connection.hub.qs = { 'userName': userName };
        var popupNotification = $("#popupNotification").data("kendoNotification");

        if ($.connection.hub.state === $.signalR.connectionState.disconnected) {
        $.connection.hub.start().done(function () {//when the connection is ready,

        popupNotification.show("Server Connection Established");
        });
        }

        messageHub.client.send = function (message) {
        if (message.messageType == "PM")
        popupNotification.show(message.message);
        };


  });


    $("#vertical").kendoSplitter({
        orientation: "vertical",
        panes: [
            { collapsible: false, resizable: false }, // Controls parent vertical pane
            { collapsible: false, size: "50px" }, //Controls bottom pane
        ]
    });

    $("#horizontal").kendoSplitter({
        panes: [
            { collapsible: true, size: "20%" },
            { collapsible: true, size: "70%" }
        ]
    });

</script>

