@{
    ViewBag.Title = "Locations";
}

<p class="dataHeader">Locations</p>



@(Html.Kendo().Notification()
    .Name("popupNotification")
)

<div id="vertical">
    
    @Html.ValidationSummary()
    
    @(Html.Kendo().Grid<CMS_Web.Models.Location>()
                .Name("location")
                .Columns(columns => {
                    columns.Bound(p => p.Name).Title("Location Name").Width("65%");
                    columns.Command(command => command.Custom("Qualifications").Click("editLocationQualifications")).Width("15%");
                    columns.Command(c => c.Edit()).Width("10%");
                    columns.Command(c => c.Destroy()).Width("10%");
                })
                .ToolBar(toolbar => toolbar.Create())
                .Editable(editable => editable.Mode(GridEditMode.PopUp).TemplateName("LocationEditor"))
                .Selectable()
                .Pageable()
                .Sortable()
                .Scrollable()
                .Filterable()
                .HtmlAttributes(new { style = "height:430px;" })
                .DataSource(dataSource => dataSource.Ajax()
                    .Model(model => model.Id(p => p.ID))
                    .Read(read => read.Action("GetLocations", "Locations"))
                    .Create(update => update.Action("locationEditingInline_Create" , "Locations"))
                    .Update(update => update.Action("locationEditingInline_Update" , "Locations"))
                    .Destroy(update => update.Action("locationEditingInline_Destroy" , "Locations"))

                )
                .Resizable(resize => resize.Columns(true))

            )          

</div>              

<style scoped>
        #vertical {
            height: 600px;
            width: 1000px;
            margin: 0 auto;
        }

</style>

<!--Reference the SignalR library. -->
<script src="/Scripts/jquery.signalR-2.1.2.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="/signalr/hubs"></script>

<script>

    function editLocationQualifications(e)
    {
        e.preventDefault();

        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        window.location.href = "@Url.Action("editLocationRequiredQualifications", "Locations")?id=" + dataItem.ID;
    }

    $(document).ready(function () {


        var messageHub = $.connection.messageHub;
        var userName = "@HttpContext.Current.User.Identity.Name";

        $.connection.hub.qs = { 'userName': userName };
        var popupNotification = $("#popupNotification").data("kendoNotification");

        if ($.connection.hub.state === $.signalR.connectionState.disconnected) {
            $.connection.hub.start().done(function () {//when the connection is ready,

                popupNotification.show("Server Connection Established");
            });
        }

        messageHub.client.send = function (message) {
            if (message.messageType == "PM")
                popupNotification.show(message.message);
        };


    });

</script>