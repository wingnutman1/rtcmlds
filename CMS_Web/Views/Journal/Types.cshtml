@{
    ViewBag.Title = "Journal Types";
}

<p class="dataHeader">Journal Types</p>



@(Html.Kendo().Notification()
    .Name("popupNotification")
)

<div id="vertical">
    
    @Html.ValidationSummary()
    
    @(Html.Kendo().Grid<CMS_Web.Models.JournalEntryType>()    
                .Name("JournalEntryType")
                .Columns(columns => {
                    columns.Bound(p => p.Type).Title("Type").Width(100);
                    columns.Command(c => c.Edit()).Width(40);
                    columns.Command(c => c.Destroy()).Width(40);
                })
                .ToolBar(toolbar => toolbar.Create())
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                .Selectable()
                .Pageable()
                .Sortable()
                .Scrollable()
                .Filterable()
                .HtmlAttributes(new { style = "height:430px;" })
                .DataSource(dataSource => dataSource.Ajax()
                    .Model(model => model.Id(p => p.ID))
                    .Read(read => read.Action("GetJournalTypes", "Journal"))
                    .Create(update => update.Action("journalTypesEditingInline_Create" , "Journal"))
                    .Update(update => update.Action("journalTypesEditingInline_Update" , "Journal"))
                    .Destroy(update => update.Action("journalTypesEditingInline_Destroy" , "Journal"))
                )
                .Resizable(resize => resize.Columns(true))
          
            )          

</div>              

<style scoped>
        #vertical {
            height: 600px;
            width: 1000px;
            margin: 0 auto;
        }

</style>

<!--Reference the SignalR library. -->
<script src="/Scripts/jquery.signalR-2.1.2.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="/signalr/hubs"></script>

<script type="text/javascript">

  $(document).ready(function () {


        var messageHub = $.connection.messageHub;
        var userName = "@HttpContext.Current.User.Identity.Name";

        $.connection.hub.qs = { 'userName': userName };
        var popupNotification = $("#popupNotification").data("kendoNotification");

        if ($.connection.hub.state === $.signalR.connectionState.disconnected) {
        $.connection.hub.start().done(function () {//when the connection is ready,

        popupNotification.show("Server Connection Established");
        });
        }

        messageHub.client.send = function (message) {
        if (message.messageType == "PM")
        popupNotification.show(message.message);
        };


  });

</script>