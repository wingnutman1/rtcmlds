@{
    ViewBag.Title = "Clients";
}

<p class="dataHeader">Clients</p>



@(Html.Kendo().Notification()
    .Name("popupNotification")
)

<div id="vertical">
    
    @*@Html.ValidationSummary()*@
    
    @(Html.Kendo().Grid<CMS_Web.Models.Client>()
                .Name("client")
                .Columns(columns => {
                    columns.Bound(p => p.FirstName).Title("First Name").Width("20%");
                    columns.Bound(p => p.LastName).Title("Last Name").Width("20%");
                    columns.Command(command => command.Custom("Sites and Staff").Click("sitesAndStaff")).Width("15%");
                    columns.Command(command => command.Custom("Qualifications").Click("editClientQualifications")).Width("15%");
                    columns.Command(c => c.Edit()).Width("15%");
                    columns.Command(c => c.Destroy()).Width("15%");
                })
                .ToolBar(toolbar => toolbar.Create())
                .Editable(editable => editable.Mode(GridEditMode.PopUp).TemplateName("ClientEditor"))
                .Selectable()
                .Pageable()
                .Sortable()
                .Scrollable()
                .Filterable()
                .HtmlAttributes(new { style = "height:430px;" })
                .DataSource(dataSource => dataSource.Ajax()
                    .Model(model => model.Id(p => p.ID))
                    .Read(read => read.Action("GetClients", "Clients"))
                    .Create(update => update.Action("clientEditingInline_Create" , "Clients"))
                    .Update(update => update.Action("clientEditingInline_Update" , "Clients"))
                    .Destroy(update => update.Action("clientEditingInline_Destroy" , "Clients"))

                )
                .Resizable(resize => resize.Columns(true))

            )          

</div>              

<style scoped>
        #vertical {
            height: 600px;
            width: 1000px;
            margin: 0 auto;
        }

</style>

<!--Reference the SignalR library. -->
<script src="/Scripts/jquery.signalR-2.1.2.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="/signalr/hubs"></script>

<script>
    function sitesAndStaff(e)
    {
        e.preventDefault();

        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        window.location.href = "@Url.Action("ClientSitesAndStaff", "Clients")?clientID=" + dataItem.ID;
    }

    function editClientQualifications(e)
    {
        e.preventDefault();

        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        window.location.href = "@Url.Action("editClientRequiredQualifications", "Clients")?id=" + dataItem.ID;
    }

    $(document).ready(function () {


        var messageHub = $.connection.messageHub;
        var userName = "@HttpContext.Current.User.Identity.Name";

        $.connection.hub.qs = { 'userName': userName };
        var popupNotification = $("#popupNotification").data("kendoNotification");

        if ($.connection.hub.state === $.signalR.connectionState.disconnected) {
            $.connection.hub.start().done(function () {//when the connection is ready,

                popupNotification.show("Server Connection Established");
            });
        }

        messageHub.client.send = function (message) {
            if (message.messageType == "PM")
                popupNotification.show(message.message);
        };


    });

</script>