@model CMS_Web.Models.OnCallCalendar

@{
    ViewBag.Title = "On Call Calendars";
}

<p class="dataHeader">On Call Calendars</p>



@(Html.Kendo().Notification()
    .Name("popupNotification")
)

<div id="vertical">

    @Html.ValidationSummary()

    @(Html.Kendo().Grid<CMS_Web.Models.OnCallCalendar>()
                .Name("onCallCalendars")
                .Columns(columns =>
                {
                    columns.Bound(p => p.Description).Title("Description").Width("70%");
                    columns.Command(c => c.Edit()).Width("20%");
                    columns.Command(c => c.Destroy()).Width("10%");
                })
                .ToolBar(toolbar => toolbar.Create())
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                .Selectable()
                .Pageable()
                .Sortable()
                .Scrollable()
                .Filterable()
                .HtmlAttributes(new { style = "height:430px;" })
                .DataSource(dataSource => dataSource.Ajax()
                    .Model(model => model.Id(p => p.ID))
                    .Read(read => read.Action("GetOnCallCalendars", "OnCallCalendar"))
                    .Create(update => update.Action("onCallCalendarsEditingInline_Create", "OnCallCalendar"))
                    .Update(update => update.Action("onCallCalendarsEditingInline_Update", "OnCallCalendar"))
                    .Destroy(update => update.Action("onCallCalendarsEditingInline_Destroy", "OnCallCalendar"))
                )
                .Resizable(resize => resize.Columns(true))
    )

</div>

<style scoped>
    #vertical {
        height: 600px;
        width: 1000px;
        margin: 0 auto;
    }
</style>

<!--Reference the SignalR library. -->
<script src="/Scripts/jquery.signalR-2.1.2.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="/signalr/hubs"></script>

<script type="text/javascript">

  $(document).ready(function () {


        var messageHub = $.connection.messageHub;
        var userName = "@HttpContext.Current.User.Identity.Name";

        $.connection.hub.qs = { 'userName': userName };
        var popupNotification = $("#popupNotification").data("kendoNotification");

        if ($.connection.hub.state === $.signalR.connectionState.disconnected) {
        $.connection.hub.start().done(function () {//when the connection is ready,

        popupNotification.show("Server Connection Established");
        });
        }

        messageHub.client.send = function (message) {
        if (message.messageType == "PM")
        popupNotification.show(message.message);
        };


  });

</script>
